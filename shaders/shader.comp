#version 450

layout(binding = 0, rgba8_snorm) uniform writeonly image2D renderTarget;

layout(local_size_x = 16, local_size_y = 16) in;

void main() {
    vec2 uv = gl_GlobalInvocationID.xy / vec2(imageSize(renderTarget));

    imageStore(renderTarget, ivec2(gl_GlobalInvocationID.xy), vec4(uv.x, uv.y, 0.5f, 1.0f));
}
